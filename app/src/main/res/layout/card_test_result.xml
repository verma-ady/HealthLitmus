<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusableInTouchMode="true">

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recyclerView_card_test"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:elevation="2dp"
        android:background="@android:color/transparent"/>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardView_card_test"
        card_view:cardUseCompatPadding="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:foreground="?attr/selectableItemBackground"
        android:elevation="3dp"
        android:focusable="true"
        android:clickable="true"
        card_view:cardBackgroundColor="@android:color/transparent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:paddingRight="10dp"
            android:elevation="4dp"
            android:background="@drawable/custom_border">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_card_test_place"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:paddingBottom="2dp"
                    android:paddingTop="3dp"
                    android:ellipsize="end"
                    android:singleLine="true"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_card_test_near"
                    android:layout_below="@id/text_card_test_place"
                    android:textSize="12sp"
                    android:textColor="#ffffff"
                    android:paddingBottom="2dp"
                    android:paddingTop="3dp"
                    android:layout_marginRight="10dp"
                    android:ellipsize="end"
                    android:singleLine="true"/>
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_card_test_price"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:paddingRight="4dp"
                android:paddingLeft="2dp"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>