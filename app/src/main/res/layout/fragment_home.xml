<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:paddingLeft="3dp"
    android:paddingBottom="5dp"
    android:paddingRight="3dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.healthlitmus.Home">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/frame_home_searchLocation"
            android:layout_marginBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linear_home_searchLocation"
        android:background="@drawable/custom_border"
        android:padding="10dp" android:layout_margin="8dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search My Location"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:background="#FF9100"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OR"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal|center_vertical"
            android:padding="10dp"
            android:layout_margin="10dp"/>

    <Spinner
        android:id="@+id/spinner_home_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp" />

    <Spinner
        android:id="@+id/spinner_home_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="3dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:background="#ffffff"
                android:layout_marginLeft="20dp"
                android:paddingRight="2dp"
                android:paddingLeft="2dp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/frame_home_testDetails"
            android:layout_below="@id/frame_home_searchLocation" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linear_home_testDetails"
                android:background="@drawable/custom_border"
                android:padding="10dp" android:layout_margin="8dp">
                <com.healthlitmus.Helper.MultiSpinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:id="@+id/spinner_home_test"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medical Test"
                android:background="#ffffff"
                android:layout_marginLeft="20dp"
                android:paddingRight="2dp"
                android:paddingLeft="2dp" />

        </FrameLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/frame_home_testDetails"
            android:text="Search"
            android:background="#FF9100"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"/>

    </RelativeLayout>
</FrameLayout>
